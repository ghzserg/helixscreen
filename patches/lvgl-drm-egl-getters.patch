+void * lv_linux_drm_get_egl_display(lv_display_t * disp)
+{
+    if(!disp) return NULL;
+    lv_drm_ctx_t * ctx = lv_display_get_driver_data(disp);
+    if(!ctx || !ctx->egl_ctx) return NULL;
+    return (void *)ctx->egl_ctx->egl_display;
+}
