<!-- Spoolman spool item row for picker modal -->
<component>
  <api>
    <prop name="spool_id" type="int" default="0"/>
  </api>
  <styles>
    <!-- Checked state: left border highlight + elevated background (matches spoolman_spool_row) -->
    <style name="checked_style"
           border_width="#space_xs" border_side="left" border_color="#primary" bg_color="#elevated_bg" bg_opa="255"/>
  </styles>
  <view name="spool_item"
        extends="lv_button" width="100%" height="content" style_radius="#border_radius" style_border_width="0"
        style_shadow_width="0" style_bg_opa="0" style_pad_all="#space_sm" style_pad_gap="#space_sm" flex_flow="row"
        style_flex_main_place="start" style_flex_cross_place="center" clickable="true">
    <style name="checked_style" selector="checked"/>
    <event_cb trigger="clicked" callback="spoolman_spool_item_clicked_cb"/>
    <!-- Color swatch -->
    <lv_obj name="spool_swatch"
            width="32" height="32" style_radius="#border_radius_small" style_bg_color="#text_muted" style_bg_opa="255"
            style_border_color="#text_muted" style_border_opa="80" scrollable="false" clickable="false"/>
    <!-- Details column -->
    <lv_obj height="content"
            style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="start"
            style_pad_gap="0" scrollable="false" flex_grow="1" clickable="false">
      <!-- Primary: Vendor + Material (e.g., "Polymaker PLA") -->
      <text_body name="spool_name" text="Unknown Spool" translation_tag="Unknown Spool" clickable="false"/>
      <!-- Secondary: Color name + Weight -->
      <lv_obj height="content"
              style_pad_all="0" flex_flow="row" style_flex_main_place="start" style_pad_gap="#space_xs"
              scrollable="false" clickable="false">
        <text_small name="spool_color" text="" clickable="false"/>
        <text_small name="spool_weight" text="" clickable="false"/>
      </lv_obj>
    </lv_obj>
    <!-- Checkmark for current selection (hidden by default) -->
    <icon name="selected_icon" src="check_circle" size="sm" variant="success" hidden="true" clickable="false"/>
  </view>
</component>
