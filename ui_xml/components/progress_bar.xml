<!-- Shared progress bar component with gradient indicator -->
<!-- Indicator: secondary â†’ tertiary gradient, 15% blend zone at leading edge -->
<!-- C++ dynamically adjusts gradient stops on draw -->
<!-- Usage: <progress_bar bind_value="my_subject"/> -->
<component>
  <api>
    <prop name="bind_value" type="string" default=""/>
    <prop name="min_value" type="string" default="0"/>
    <prop name="max_value" type="string" default="100"/>
    <prop name="value" type="string" default="0"/>
  </api>
  <view extends="lv_bar"
        width="100%" height="12" style_bg_color="#overlay_bg" style_bg_opa="255"
        style_radius="#space_xs" style_border_width="0"
        min_value="$min_value" max_value="$max_value" value="$value" bind_value="$bind_value"
        style_bg_color-indicator="#secondary"
        style_bg_grad_color-indicator="#tertiary"
        style_bg_grad_dir-indicator="hor"
        style_bg_opa-indicator="255">
    <!-- C++ handles gradient stops dynamically on each draw -->
    <event_cb trigger="draw_main_begin" callback="on_progress_bar_draw"/>
  </view>
</component>
