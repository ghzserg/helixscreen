<!-- Notification History Item Component
     Uses severity_card widget for automatic color styling.
     Pass severity="error|warning|success|info" and it handles colors.
     Call ui_severity_card_finalize() after creation to style children. -->
<component>
  <api>
    <prop type="string" name="severity"/>      <!-- "error", "warning", "info", "success" -->
    <prop type="string" name="title"/>
    <prop type="string" name="message"/>
    <prop type="string" name="timestamp"/>
  </api>

  <!-- Compact notification card with left color border (severity_card handles colors) -->
  <view extends="severity_card" name="notification_item"
        severity="$severity"
        width="100%" height="64"
        style_pad_left="#padding_small" style_pad_right="#padding_small"
        style_pad_top="#padding_tiny" style_pad_bottom="#padding_small"
        style_bg_color="#card_bg"
        style_bg_opa="255"
        style_border_width="4"
        style_border_side="left"
        style_radius="#border_radius"
        scrollable="false">

    <!-- Severity icon (top-left) - styled by ui_severity_card_finalize() -->
    <lv_label name="severity_icon" text="&#xF071;"
              align="top_left"
              style_text_font="fa_icons_24"/>

    <!-- Title (top-left, offset right of icon, vertically centered with 24px icon) -->
    <text_body name="item_title" text="$title"
               align="top_left" x="30" y="4"/>

    <!-- Timestamp (top-right) -->
    <text_small name="item_timestamp" text="$timestamp"
                align="top_right"
                style_text_color="#text_secondary"/>

    <!-- Message (bottom-left, full width) -->
    <text_small name="item_message" text="$message"
                align="bottom_left" width="95%"
                style_text_color="#text_secondary" long_mode="wrap"/>
  </view>
</component>
