<!-- Telemetry Info Modal - Explains what we collect and why -->
<!-- Used from wizard summary step "Learn more" link -->
<component>
  <view name="telemetry_info_modal"
        extends="ui_dialog" width="75%" height="80%" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0" clickable="true" scrollable="false">
    <!-- Header -->
    <lv_obj width="100%"
            height="content" style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="#space_lg"
            style_pad_bottom="#space_sm" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_sm"
            scrollable="false">
      <icon src="chart_line" size="md" variant="primary"/>
      <text_heading text="What We Collect" translation_tag="What We Collect"/>
    </lv_obj>
    <!-- Scrollable markdown content — flex_grow fills space between header and button -->
    <lv_obj name="content_area"
            width="100%" flex_grow="1" style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="0"
            style_pad_bottom="#space_md" scrollable="true" scroll_snap_y="none">
      <ui_markdown name="info_text" width="100%" bind_text="telemetry_info_text"/>
    </lv_obj>
    <!-- Single OK button — always visible at bottom -->
    <divider_horizontal/>
    <lv_obj width="100%" height="#button_height" style_pad_all="0" flex_flow="row">
      <ui_button name="btn_primary" height="100%" flex_grow="1" style_radius="0" text="Got it" translation_tag="Got it"/>
    </lv_obj>
  </view>
</component>
