<!-- Modal for editing Spoolman spool properties -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<!-- Layout: Side-by-side with spool canvas on left, form fields on right -->
<component>
  <consts>
    <px name="spool_preview_size" value="100"/>
    <px name="left_column_width" value="120"/>
    <px name="field_label_width" value="80"/>
  </consts>
  <!-- Dialog card -->
  <view name="spoolman_edit_modal"
        extends="ui_dialog" width="420" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Header with title and close button -->
    <lv_obj width="100%"
            height="content" style_pad_left="#space_lg" style_pad_right="#space_md" style_pad_top="#space_lg"
            style_pad_bottom="#space_sm" flex_flow="row" style_flex_main_place="space_between"
            style_flex_cross_place="center" scrollable="false">
      <text_heading name="spool_title" text="Edit Spool"/>
      <ui_button name="btn_close" width="40" height="40" icon="close" variant="ghost">
        <event_cb trigger="clicked" callback="spoolman_edit_close_cb"/>
      </ui_button>
    </lv_obj>
    <!-- Horizontal divider -->
    <divider_horizontal/>
    <!-- Content area - HORIZONTAL layout -->
    <lv_obj width="100%"
            height="content" style_pad_all="#space_md" flex_flow="row" style_pad_gap="#space_lg" scrollable="false">
      <!-- LEFT COLUMN: Spool canvas preview -->
      <lv_obj width="#left_column_width"
              height="content" style_pad_all="0" flex_flow="column" style_flex_main_place="start"
              style_flex_cross_place="center" style_pad_gap="#space_sm" scrollable="false">
        <!-- 3D spool canvas -->
        <spool_canvas name="spool_preview" size="#spool_preview_size" color="0x808080" fill_level="0.5"/>
        <!-- Read-only info below canvas -->
        <text_small name="material_label" text="PLA" style_text_align="center" style_text_color="#text"/>
        <text_small name="color_label" text="Black" style_text_align="center" style_text_color="#text_muted"/>
        <text_small name="vendor_label" text="Polymaker" style_text_align="center" style_text_color="#text_muted"/>
      </lv_obj>
      <!-- RIGHT COLUMN: Form fields (scrollable for small screens) -->
      <lv_obj height="280"
              flex_grow="1" style_pad_all="0" flex_flow="column" style_flex_main_place="start"
              style_flex_cross_place="start" style_pad_gap="#space_sm" scrollable="true">
        <!-- Remaining Weight -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="space_between"
                style_flex_cross_place="center" scrollable="false">
          <text_small width="#field_label_width" text="Remaining (g)" translation_tag="Remaining (g)"/>
          <text_input name="field_remaining" width="120" input_mode="number" placeholder="1000" max_length="8">
            <event_cb trigger="value_changed" callback="spoolman_edit_field_changed_cb"/>
          </text_input>
        </lv_obj>
        <!-- Spool Weight -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="space_between"
                style_flex_cross_place="center" scrollable="false">
          <text_small width="#field_label_width" text="Spool wt (g)" translation_tag="Spool wt (g)"/>
          <text_input name="field_spool_weight" width="120" input_mode="number" placeholder="0" max_length="8">
            <event_cb trigger="value_changed" callback="spoolman_edit_field_changed_cb"/>
          </text_input>
        </lv_obj>
        <!-- Price -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="space_between"
                style_flex_cross_place="center" scrollable="false">
          <text_small width="#field_label_width" text="Price" translation_tag="Price"/>
          <text_input name="field_price" width="120" input_mode="number" placeholder="0.00" max_length="10">
            <event_cb trigger="value_changed" callback="spoolman_edit_field_changed_cb"/>
          </text_input>
        </lv_obj>
        <!-- Lot Number -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="space_between"
                style_flex_cross_place="center" scrollable="false">
          <text_small width="#field_label_width" text="Lot Nr" translation_tag="Lot Nr"/>
          <text_input name="field_lot_nr" width="120" placeholder="" max_length="32">
            <event_cb trigger="value_changed" callback="spoolman_edit_field_changed_cb"/>
          </text_input>
        </lv_obj>
        <!-- Comment/Notes -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" flex_flow="column" style_pad_gap="#space_xxs" scrollable="false">
          <text_small text="Notes" translation_tag="Notes"/>
          <text_input name="field_comment" width="100%" height="60" placeholder="" max_length="256" multiline="true">
            <event_cb trigger="value_changed" callback="spoolman_edit_field_changed_cb"/>
          </text_input>
        </lv_obj>
      </lv_obj>
    </lv_obj>
    <!-- Action buttons -->
    <modal_button_row secondary_text="Reset"
                      secondary_callback="spoolman_edit_reset_cb" primary_text="Close"
                      primary_callback="spoolman_edit_save_cb"/>
  </view>
</component>
