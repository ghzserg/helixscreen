<component>
  <!-- First-Run Wizard: Summary Screen -->
  <!-- Shows all selections before saving configuration -->
  <consts>
    <!-- Step metadata (read by wizard orchestrator) -->
    <str name="step_title" value="Printer Setup: Review" value_tag="Printer Setup: Review"/>
    <str name="step_subtitle" value="Review your configuration below, then click Finish to save" value_tag="Review your configuration below, then click Finish to save"/>
    <int name="step_order" value="10"/>
  </consts>
  <view name="wizard_summary_root"
        extends="lv_obj" width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0"
        flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center">
    <!-- Single combined card: telemetry opt-in + config summary -->
    <ui_card name="telemetry_card" width="100%"
             flex_grow="1" style_pad_all="#space_md" style_pad_gap="#space_sm"
             flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start"
             scrollable="true">
      <!-- Telemetry opt-in: compact row with icon, label, toggle, and learn-more button -->
      <lv_obj width="100%" height="content" style_pad_all="0" style_pad_gap="#space_sm"
              flex_flow="row" style_flex_cross_place="center" scrollable="false">
        <icon src="chart_line" size="sm" variant="secondary"/>
        <lv_obj height="content" style_pad_all="0" flex_flow="column" style_pad_gap="#space_xs"
                flex_grow="1" scrollable="false">
          <text_body text="Help improve HelixScreen?" translation_tag="Help improve HelixScreen?"/>
          <text_small text="Anonymous stats — no personal data, ever."
                      translation_tag="Anonymous stats — no personal data, ever."/>
        </lv_obj>
        <ui_button name="btn_telemetry_info" variant="ghost" width="content" height="content"
                   style_pad_all="#space_xs">
          <text_small text="Learn More" translation_tag="Learn More"
                      style_text_color="#primary" style_text_decor="underline"
                      clickable="false" event_bubble="true"/>
          <event_cb trigger="clicked" callback="on_wizard_telemetry_info"/>
        </ui_button>
        <ui_switch name="wizard_telemetry_toggle" size="tiny">
          <bind_state_if_eq subject="settings_telemetry_enabled" state="checked" ref_value="1"/>
          <event_cb trigger="value_changed" callback="on_wizard_telemetry_changed"/>
        </ui_switch>
      </lv_obj>
      <!-- Divider between telemetry and config summary -->
      <divider_horizontal/>
      <!-- Config summary: two-column layout -->
      <lv_obj width="100%" height="content" style_pad_all="0" style_pad_gap="#space_md"
              flex_flow="row" style_flex_main_place="start" style_flex_cross_place="start">
      <!-- Left column: Connection settings -->
      <lv_obj width="48%"
              height="content" style_pad_all="0" style_pad_gap="#space_xs" flex_flow="column"
              style_flex_main_place="start" style_flex_cross_place="start">
        <text_heading text="Connection" translation_tag="Connection" style_pad_bottom="#space_xs"/>
        <!-- Printer Name -->
        <lv_obj width="100%" style_pad_all="0" flex_flow="column" style_pad_gap="0">
          <text_small text="Printer Name" translation_tag="Printer Name"/>
          <text_body name="summary_printer_name_label" bind_text="summary_printer_name"/>
        </lv_obj>
        <!-- Printer Type -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" style_pad_top="#space_xs" flex_flow="column" style_pad_gap="0">
          <text_small text="Printer Type" translation_tag="Printer Type"/>
          <text_body name="summary_printer_type_label" bind_text="summary_printer_type"/>
        </lv_obj>
        <!-- WiFi -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" style_pad_top="#space_xs" flex_flow="column" style_pad_gap="0">
          <text_small text="WiFi Network" translation_tag="WiFi Network"/>
          <text_body name="summary_wifi_ssid_label" bind_text="summary_wifi_ssid"/>
        </lv_obj>
        <!-- Moonraker -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" style_pad_top="#space_xs" flex_flow="column" style_pad_gap="0">
          <text_small text="Moonraker" translation_tag="Moonraker"/>
          <text_body name="summary_moonraker_label" bind_text="summary_moonraker_connection"/>
        </lv_obj>
      </lv_obj>
      <!-- Right column: Hardware mapping -->
      <lv_obj width="48%"
              height="content" style_pad_all="0" style_pad_gap="#space_xs" flex_flow="column"
              style_flex_main_place="start" style_flex_cross_place="start">
        <text_heading text="Hardware" translation_tag="Hardware" style_pad_bottom="#space_xs"/>
        <!-- Heated Bed -->
        <lv_obj width="100%" style_pad_all="0" flex_flow="column" style_pad_gap="0">
          <text_small text="Heated Bed" translation_tag="Heated Bed"/>
          <text_body name="summary_bed_label" bind_text="summary_bed"/>
        </lv_obj>
        <!-- Hotend -->
        <lv_obj width="100%"
                height="content" style_pad_all="0" style_pad_top="#space_xs" flex_flow="column" style_pad_gap="0">
          <text_small text="Hotend" translation_tag="Hotend"/>
          <text_body name="summary_hotend_label" bind_text="summary_hotend"/>
        </lv_obj>
        <!-- Part Cooling Fan (conditionally visible) -->
        <lv_obj name="part_fan_row"
                width="100%" height="content" style_pad_all="0" style_pad_top="#space_xs" flex_flow="column"
                style_pad_gap="0">
          <text_small text="Part Cooling Fan" translation_tag="Part Cooling Fan"/>
          <text_body name="summary_part_fan_label" bind_text="summary_part_fan"/>
          <bind_flag_if_eq subject="summary_part_fan_visible" flag="hidden" ref_value="0"/>
        </lv_obj>
        <!-- Hotend Cooling Fan (conditionally visible) -->
        <lv_obj name="hotend_fan_row"
                width="100%" height="content" style_pad_all="0" style_pad_top="#space_xs" flex_flow="column"
                style_pad_gap="0">
          <text_small text="Hotend Fan" translation_tag="Hotend Fan"/>
          <text_body name="summary_hotend_fan_label" bind_text="summary_hotend_fan"/>
          <bind_flag_if_eq subject="summary_hotend_fan_visible" flag="hidden" ref_value="0"/>
        </lv_obj>
        <!-- LED Strip (conditionally visible) -->
        <lv_obj name="led_strip_row"
                width="100%" height="content" style_pad_all="0" style_pad_top="#space_xs" flex_flow="column"
                style_pad_gap="0">
          <text_small text="LED Strip" translation_tag="LED Strip"/>
          <text_body name="summary_led_strip_label" bind_text="summary_led_strip"/>
          <bind_flag_if_eq subject="summary_led_strip_visible" flag="hidden" ref_value="0"/>
        </lv_obj>
        <!-- Filament Sensor (conditionally visible) -->
        <lv_obj name="filament_sensor_row"
                width="100%" height="content" style_pad_all="0" style_pad_top="#space_xs" flex_flow="column"
                style_pad_gap="0">
          <text_small text="Filament Sensor" translation_tag="Filament Sensor"/>
          <text_body name="summary_filament_sensor_label" bind_text="summary_filament_sensor"/>
          <bind_flag_if_eq subject="summary_filament_sensor_visible" flag="hidden" ref_value="0"/>
        </lv_obj>
        <!-- AMS/Multi-Material System (conditionally visible) -->
        <lv_obj name="ams_row"
                width="100%" height="content" style_pad_all="0" style_pad_top="#space_xs" flex_flow="column"
                style_pad_gap="0">
          <text_small text="Multi-Material" translation_tag="Multi-Material"/>
          <text_body name="summary_ams_type_label" bind_text="summary_ams_type"/>
          <bind_flag_if_eq subject="summary_ams_visible" flag="hidden" ref_value="0"/>
        </lv_obj>
        <!-- Input Shaping / Accelerometer (conditionally visible) -->
        <lv_obj name="input_shaper_row"
                width="100%" height="content" style_pad_all="0" style_pad_top="#space_xs" flex_flow="column"
                style_pad_gap="0">
          <text_small text="Input Shaping" translation_tag="Input Shaping"/>
          <text_body name="summary_input_shaper_label" bind_text="summary_input_shaper"/>
          <bind_flag_if_eq subject="summary_input_shaper_visible" flag="hidden" ref_value="0"/>
        </lv_obj>
      </lv_obj>
      </lv_obj>
    </ui_card>
  </view>
</component>
